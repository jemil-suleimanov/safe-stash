{
  "compilerOptions": {
    // Common settings shared across Node/Electron and App configs
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true, 
    "baseUrl": ".",
    "paths": { 
        "@app/*": ["src/app/*"],
        "@electron/*": ["src/electron/*"],
        "@shared/*": ["src/shared/*"]
    }
  },
  "include": ["src"],
  "exclude": ["src/electron"],
  "references": [
    { "path": "./tsconfig.node.json" },
    { "path": "./tsconfig.app.json" }
  ]
}
