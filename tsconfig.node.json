{
    "extends": "./tsconfig.json", 
    "compilerOptions": {
      "composite": true,
      "target": "ESNext",
      "module": "CommonJS",
      "moduleResolution": "Node", 
      "outDir": ".vite/build",
    },
    "include": [
      "src/electron/**/*.ts",
      "src/electron/**/*.cts",
      "src/shared/**/*.ts",
    ],
    "exclude": [
      "node_modules",
      "src/app/*"
    ]
}